<?xml version="1.0"?>
<page layout="1column"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="main">
            <block class="Magento\Framework\View\Element\Template"
                   name="blog.post.list"
                   template="Mageosk_Blog::post/list.phtml">
                <arguments>
                    <argument name="viewModel" xsi:type="object">Mageosk\Blog\ViewModel\PostList</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
